<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialog"
                android:text="Simple Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogDelayedButton"
                android:text="Simple Dialog (Delayed-button)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogCustomView"
                android:text="Dialog (Custom-view)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogFileChooser"
                android:text="File Chooser Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogListNoTitle"
                android:text="List Dialog (No title)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogList"
                android:text="List Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogListSingleChoice"
                android:text="List Dialog (Single-choice)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogListMultiChoice"
                android:text="List Dialog (Multi-choice)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogBaseAdapter"
                android:text="Base Adapter Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogShare"
                android:text="Share App Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogLicense"
                android:text="License Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogChangelog"
                android:text="Changelog Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogScaled"
                android:text="Scaled Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogCustomTypeface"
                android:text="Custom Typeface" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogThemed"
                android:text="Themed Dialog" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginTop="@dimen/button_margin_top"
                android:onClick="onDialogDimmed"
                android:text="Dimmed Dialog" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:progress="30" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>